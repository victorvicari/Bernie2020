<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:foreground="?attr/selectableItemBackground"
                                                   android:layout_margin="0dp"
                                                   android:clickable="true">

    <TextView
            android:id="@+id/textview_legislation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            style="@style/SubheaderBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_legislation_favorite"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:id="@+id/imageview_legislation_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_black_16dp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_legislation_favorite"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            />

    <CheckBox
            android:id="@+id/checkbox_legislation_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/ic_favorite_combo_16dp"
            android:stateListAnimator="@animator/favorite_scale"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageview_legislation_share"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/barrier"

            android:background="@color/dividerColor"
            android:layout_marginTop="8dp"
            android:id="@+id/view"/>

    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="imageview_legislation_share,textview_legislation_name"
            tools:layout_editor_absoluteY="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
