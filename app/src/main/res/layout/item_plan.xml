<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textview_proposal_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textIsSelectable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_plan_favorite"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:id="@+id/imageview_plan_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share_black_16dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_plan_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textview_proposal_item_desc"
            android:layout_marginEnd="8dp"/>

    <CheckBox
            android:id="@+id/checkbox_plan_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/ic_favorite_combo_24dp"
            android:stateListAnimator="@animator/favorite_scale"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageview_plan_share"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/textview_proposal_item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textIsSelectable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/barrier_plan"/>

    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier_plan"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="textview_proposal_item_name,imageview_plan_share,checkbox_plan_favorite"
            tools:layout_editor_absoluteX="411dp"/>

    <View style="@style/Divider"
            app:layout_constraintTop_toBottomOf="@id/textview_proposal_item_desc"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>